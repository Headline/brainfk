import os

cxx = builder.DetectCxx()

if cxx.like('gcc'):
    cxx.cflags += [
      '-pipe',
      '-Wall',
      '-Werror',
      '-fvisibility=hidden',
      '-std=c++1z',
    ]
elif cxx.like('msvc'):
	cxx.cflags += [
    '-W3',
    '-WX',
    '-std:c++17',
    '/O2',
	'/FA',
	]

cxx.defines += ['_HAS_EXCEPTIONS=0']

program = builder.cxx.Program('Brainfuck')
program.sources += [
  'test.cpp',
]
builder.Add(program)
